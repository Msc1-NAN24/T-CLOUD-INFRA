port {{ openvpn_port }}
proto {{ openvpn_protocol }}
dev tun
ca ca.crt
cert server.crt
key server.key
dh dh.pem
server {{ openvpn_network }}
ifconfig-pool-persist ipp.txt
push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS 8.8.8.8"
push "dhcp-option DNS 8.8.4.4"
keepalive 10 120
tls-auth ta.key 0
cipher AES-256-CBC
auth SHA256
user nobody
group nogroup
persist-key
persist-tun
status openvpn-status.log
verb 3
