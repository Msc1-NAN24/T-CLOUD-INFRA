{
  "dashboard": {
    "id": null,
    "title": "Kubernetes Cluster Monitoring",
    "uid": "k8s-cluster-monitoring",
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "type": "graph",
        "title": "Cluster CPU Usage",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{image!=\"\"}[5m])) by (namespace)",
            "format": "time_series",
            "intervalFactor": 2,
            "legendFormat": "{{namespace}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "show": true
        },
        "yaxis": {
          "format": "percent",
          "show": true
        }
      },
      {
        "type": "graph",
        "title": "Cluster Memory Usage",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{image!=\"\"}) by (namespace)",
            "format": "time_series",
            "intervalFactor": 2,
            "legendFormat": "{{namespace}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "show": true
        },
        "yaxis": {
          "format": "bytes",
          "show": true
        }
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  }
}
