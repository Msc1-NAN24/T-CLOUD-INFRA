client
dev tun
proto {{ openvpn_protocol }}
remote {{ ansible_host }} {{ openvpn_port }}
resolv-retry infinite
nobind
persist-key
persist-tun
remote-cert-tls server
cipher AES-256-CBC
auth SHA256
verb 3
<ca>
{{ ca_content }}
</ca>
<cert>
{{ cert_content }}
</cert>
<key>
{{ key_content }}
</key>
<tls-auth>
{{ ta_key_content }}
</tls-auth>
key-direction 1